---
import BookItem from "./BookItem.astro";
import books  from "../data/books.js";
---

<ul class="grid grid-cols-2 md:grid-cols-3 gap-3 mt-32">  
    {
      books.map(book => {
        return (
        <li class="list-none">
          <BookItem id={book.id} title={book.title} image={book.image} link={book.id} />
        </li> 
        )
      })
    }
</ul>